env:
  TERM: xterm-256color

window:
  padding:
    x: 8
    y: 2

  opacity: 0.99
  decorations: buttonless

font:
  normal:
    family: jetBrainsMono Nerd Font
    style: Medium

  bold:
    family: jetBrainsMono Nerd Font
  italic:
    family: jetBrainsMono Nerd Font
    style: Italic

  size: 13.0

  offset:
    x: 1
    y: 4

  glyph_offset:
    x: 0
    y: 2

  use_thin_strokes: false

draw_bold_text_with_bright_colors: true

mouse:
  hide_when_typing: true

mouse_bindings:
  - { mouse: Middle, action: PasteSelection }

colors:
  # Default colors
  primary:
    # hard contrast: background = '#1d2021'
    background: '#1e1e1e'
    # soft contrast: background = '#32302f'
    foreground: '#ebdbb2'

  # Normal colors
  normal:
    black: '#282828'
    red: '#cc241d'
    green: '#98971a'
    yellow: '#d79921'
    blue: '#458588'
    magenta: '#b16286'
    cyan: '#689d6a'
    white: '#a89984'

  # Bright colors
  bright:
    black: '#928374'
    red: '#fb4934'
    green: '#b8bb26'
    yellow: '#fabd2f'
    blue: '#83a598'
    magenta: '#d3869b'
    cyan: '#8ec07c'
    white: '#ebdbb2'

key_bindings:
  - { key: V, mods: Command, action: Paste }
  - { key: C, mods: Command|Shift, action: Copy }
  - { key: T, mods: Command, chars: "\x02c" }
  - { key: W, mods: Command, chars: "\x02x" }
  - { key: D, mods: Command, chars: "\x02%" }
  - { key: D, mods: Command|Shift, chars: "\x02\"" }
  - { key: P, mods: Command, chars: "\x02n" }
  - { key: N, mods: Command, chars: "\x02p" }
  - { key: H, mods: Shift|Command, chars: "\x02H" }
  - { key: L, mods: Shift|Command, chars: "\x02L" }
  - { key: K, mods: Shift|Command, chars: "\x02[" }
  - { key: J, mods: Shift|Command, chars: "\x02J" }
  - { key: H, mods: Option, chars: "\x02h" }
  - { key: L, mods: Option, chars: "\x02l" }
  - { key: K, mods: Option, chars: "\x02k" }
  - { key: J, mods: Option, chars: "\x02j" }
  - { key: G, mods: Control, chars: "\x02g" }

theme: Gruvbox-Dark
